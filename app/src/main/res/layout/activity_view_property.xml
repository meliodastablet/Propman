<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ViewProperty"
        android:background="@drawable/bckg">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:background="@drawable/prp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sans_semibold"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FF323E48"
            android:textSize="70px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5pt"
            android:layout_marginTop="3pt">

            <Button
                android:id="@+id/left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@drawable/left"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="0.5pt" />

            <Button
                android:id="@+id/right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@drawable/right"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelprice"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:fontFamily="@font/sans_bold"
                android:paddingTop="3pt"
                android:text="Price:"
                android:textColor="@color/colorPrimary"
                android:textSize="45px" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="45px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelnumofrooms"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:fontFamily="@font/sans_bold"
                android:text="Number of Rooms:"
                android:textColor="@color/colorPrimary"
                android:textSize="45px" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="45px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeladdress"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:paddingTop="3pt"
                android:fontFamily="@font/sans_bold"
                android:text="Address:"
                android:textColor="@color/colorPrimary"
                android:textSize="45px" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="45px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labeldesc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:paddingTop="3pt"
                android:fontFamily="@font/sans_bold"
                android:text="Description:"
                android:textColor="@color/colorPrimary"
                android:textSize="45px" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="45px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labelsize"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:paddingTop="3pt"
                android:fontFamily="@font/sans_bold"
                android:text="Size:"
                android:textColor="@color/colorPrimary"
                android:textSize="40px" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="40px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labdues"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:fontFamily="@font/sans_bold"
                android:text="Apartment Dues:"
                android:textColor="@color/colorPrimary"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_dues"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="40px" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labgarage"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:paddingTop="3pt"
                android:fontFamily="@font/sans_bold"
                android:text="Garage:"
                android:textColor="@color/colorPrimary"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_garage"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="40px" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labgarden"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:paddingTop="3pt"
                android:fontFamily="@font/sans_bold"
                android:text="Garden:"
                android:textColor="@color/colorPrimary"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_garden"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="40px" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labpool"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:paddingTop="3pt"
                android:fontFamily="@font/sans_bold"
                android:text="Pool:"
                android:textColor="@color/colorPrimary"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_pool"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="40px" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/labsecurity"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:fontFamily="@font/sans_bold"
                android:text="Security Guard:"
                android:textColor="@color/colorPrimary"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_security"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sans_semibold"
                android:text=""
                android:textColor="#030303"
                android:textSize="40px" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="2pt"
            android:layout_marginTop="3pt"
            >
            <Button
                android:id="@+id/smess"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:fontFamily="@font/sans_bold"
                android:text="Send Message"
                android:textColor="@color/colorAc" />

            <Button
                android:id="@+id/request"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:fontFamily="@font/sans_bold"
                android:text="Send Rent Request"
                android:textColor="@color/colorAc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="2pt"
            >
            <Button
                android:id="@+id/edit"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:fontFamily="@font/sans_bold"
                android:text="EDIT PROPERTY"
                android:textColor="@color/colorAc" />

            <Button
                android:id="@+id/delete"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:fontFamily="@font/sans_bold"
                android:text="DELETE PROPERTY"
                android:textColor="@color/colorAc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="2pt"
            >
            <Button
                android:id="@+id/show_map"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:fontFamily="@font/sans_bold"
                android:textColor="@color/colorAc"
                android:layout_gravity="center"
                android:text="SHOW ON MAP" />
            <Button
                android:id="@+id/show_profile"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:fontFamily="@font/sans_bold"
                android:textColor="@color/colorAc"
                android:text="SHOW PROFILE" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="2pt"
            >
            <Button
                android:id="@+id/reqq"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:background="@color/colorAccent"
                android:fontFamily="@font/sans_bold"
                android:gravity="center"
                android:text="Request Queue"
                android:textColor="@color/colorAc"
                android:visibility="gone" />

            <Button
            android:id="@+id/tenant_hist"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2pt"
            android:layout_marginRight="2pt"
            android:background="@color/colorAccent"
            android:fontFamily="@font/sans_bold"
            android:textColor="@color/colorAc"
            android:layout_gravity="center"
            android:text="Tenant History" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>