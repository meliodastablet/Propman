<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Show_profile"
    android:background="@drawable/bckg">

    <ImageView
        android:layout_width="260dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginBottom="3pt"
        android:background="@drawable/prp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View Profile"
        android:textSize="75px"
        android:textColor="#FF323E48"
        android:layout_marginBottom="10px"
        android:fontFamily="@font/sans_semibold"
        />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelname"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginLeft="2pt"
            android:layout_marginRight="2pt"
            android:fontFamily="@font/sans_bold"
            android:text="Name:"
            android:textColor="@color/colorPrimary"
            android:textSize="50px" />

        <TextView
            android:id="@+id/name"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2pt"
            android:layout_marginTop="10px"
            android:layout_marginRight="2pt"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/sans_semibold"
            android:textColor="#030303"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/labelsurname"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginLeft="2pt"
        android:layout_marginRight="2pt"
        android:fontFamily="@font/sans_bold"
        android:text="Surame:"
        android:textColor="@color/colorPrimary"
        android:textSize="50px" />

        <TextView
            android:id="@+id/surname"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/sans_semibold"
            android:textColor="#030303"
            android:textSize="20dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelphone"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginLeft="2pt"
            android:layout_marginRight="2pt"
            android:fontFamily="@font/sans_bold"
            android:text="Phone Number:"
            android:textColor="@color/colorPrimary"
            android:textSize="50px" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/sans_bold"
            android:textColor="#030303"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/labelmail"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginLeft="2pt"
            android:layout_marginRight="2pt"
            android:fontFamily="@font/sans_bold"
            android:text="E-mail:"
            android:textColor="@dra"
            android:textSize="50px"/>

        <TextView
            android:id="@+id/mail"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/sans_semibold"
            android:textColor="#030303"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/labeladdress"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginLeft="2pt"
            android:layout_marginRight="2pt"
            android:fontFamily="@font/sans_bold"
            android:text="Address:"
            android:textColor="@color/colorPrimary"
            android:textSize="50px"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#FF323E48"
        android:textSize="20dp"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:fontFamily="@font/sans_bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bdate"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:textColor="#FF323E48"
        android:fontFamily="@font/sans_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px">
    <Button
        android:id="@+id/sendmessage"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:background="@color/colorAccent"
        android:fontFamily="@font/sans_bold"
        android:text="Send Message"
        android:textColor="@color/colorAc"
        />

    <Button
        android:id="@+id/showprop2"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:background="@color/colorAccent"
        android:fontFamily="@font/sans_bold"
        android:text="Show All Properties"
        android:textColor="@color/colorAc" />
    </LinearLayout>
    <Button
        android:id="@+id/signout"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:background="@drawable/button2"
        android:fontFamily="@font/sans_bold"
        android:text="SIGN OUT"
        android:textColor="@color/colorAccent" />
</LinearLayout>